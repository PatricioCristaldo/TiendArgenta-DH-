<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head',{title: 'Editar'}) %>
<body class="crear-editar">
  <%- include('../partials/header') %>
    <main>
        <div class="adminTop">
            <h1>Editar Producto</h1>
            <div class="btncrear">
                <a href="/admin/listar">
                    <button type="button" class="btn crear"><i class="fas fa-arrow-circle-left"></i></button>
                </a>
            </div>
        </div>
        <form action="/admin/editar/<%= producto.id %>?_method=PUT" method="post" enctype="multipart/form-data"> <!--ENCTYPE FUNDAMENTAL PARA SUBIR IMG CON MULTER-->
            <section class="agregar">
                <div class="form-floating">
                    <input type="text" name="Titulo" class="form-control" id="Titulo" value="<%=locals.old && old.titulo ?old.nombre: null %><%= producto.titulo %>" placeholder="Titulo">
                    <label for="Titulo">Editar nombre</label>
                    <% if (locals.errors && errors.titulo) { %>
                        <small><%= errors.titulo.msg %> </small>
                    <% } %>
                </div>
    <!--TIPO DE PRODUCTO-->
                <div class="form-floating">
                    <select class="form-select" name="Categoria" id="floatingSelect" aria-label="Floating label select example">
                        <% if (locals.errors && old.categoria) { %>
                            <option hidden value="">Selecciona una opcion</option>
                            <option <%= old.categoria == "1" ? "selected" : null %>  value="cotillon">Cotillon</option>
                            <option <%= old.categoria == "2" ? "selected" : null %>   value="coleccionables">Coleccionables</option>
                            <option <%= old.categoria == "3" ? "selected" : null %>   value="mujer">Mujer</option>
                            <option <%= old.categoria == "4" ? "selected" : null %>   value="hombre">Hombre</option>
                            <option <%= old.categoria == "5" ? "selected" : null %>   value="infantil">Infantil</option>
                        <% }else{ %>
                            <option selected hidden value="">Selecciona una opcion</option>
                            <% categorias.forEach(categoria => { %>
                                <option value="<%= categoria.id %>" <%= producto.categoriasId === categoria.id ? "selected" : null %>><%= categoria.nombre %></option>
                            <% }) %>
                        <% } %> 
                    </select>
                    
                    <label for="floatingSelect">Categoria de Producto</label>
                    <% if (locals.errors && errors.categoria) { %>
                        <small><%= errors.categoria.msg %> </small>
                    <% } %>
                </div>
    <!--SUBCATEGORIAS PARA INDUMENTARIA-->
                <div class="form-floating">
                    <select class="form-select" name="subCategoria" id="floatingSelect" aria-label="Floating label select example">
                        <% if (locals.errors && old.subcategoria) { %>
                            <option hidden value="">Selecciona una opcion</option>
                            <option <%= old.subcategoria == "1" ? "selected" : null %>  value="camisetas">Camisetas</option>
                            <option <%= old.subcategoria == "2" ? "selected" : null %>   value="pantalones">Pantalones</option>
                            <option <%= old.subcategoria == "3" ? "selected" : null %>   value="accesorios">Accesorios</option>
                            <option <%= old.subcategoria == "4" ? "selected" : null %>   value=""></option>
                        <% }else{ %>
                            <option selected hidden value="">Selecciona una opcion</option>
                            <% subcategoria.forEach(subcategoria => { %>
                                <option value="<%= subcategoria.id %>" <%= producto.subcategoriasId === subcategoria.id ? "selected" : null %>><%= subcategoria.nombre %></option>
                            <% }) %>
                        <% } %> 
                    </select>
                    
                    <label for="floatingSelect">Tipo de Producto</label>
                    <% if (locals.errors && errors.subcategoria) { %>
                        <small><%= errors.subcategoria.msg %> </small>
                    <% } %>
                </div>
        <!--PRECIO-->
                <div class="form-floating">
                    <input type="number" name="Precio" class="form-control" id="Precio" value="<%=locals.old && old.precio ?old.nombre: null%><%=producto.precio%>" placeholder="Precio">
                    <label for="Precio">Precio</label>
                    <% if (locals.errors && errors.precio) { %>
                        <small><%= errors.precio.msg %> </small>
                    <% } %>
                </div>
        <!--DESCUENTO-->
                <div class="form-floating">
                    <input type="number" name="Descuento" class="form-control" id="Descuento" value="<%=locals.old && old.descuento ? old.nombre: null%><%=producto.descuento%>" placeholder="Descuento">
                    <label for="Descuento">Descuento</label>
                    <% if (locals.errors && errors.descuento) { %>
                        <small><%= errors.descuento.msg %> </small>
                    <% } %>
                </div>
<!--STOCK GRAL PARA COTILLON, COLECCIONABLES Y ACCESORIOS-->
                <div class="form-floating">
                    <input type="number" name="Stock" class="form-control" id="Stock" value="<%=locals.old && old.stock ?old.nombre: null %><%=producto.stock%>" placeholder="Stock">
                    <label for="Stock">Stock</label>
                    <% if (locals.errors && errors.stock) { %>
                        <small><%= errors.stock.msg %> </small>
                    <% } %>
                </div>
    <!--DESCRIPCION DE PRODUCTO-->
                <div class="form-floating">
                    <input type="text" class="form-control" id="description" placeholder="DescripciÃ³n" name="Descripcion" value="<%= producto.descripcion %> ">
                    <label for="floatingTextarea">Descripcion</label>
                    <% if (locals.errors && errors.descripcion) { %>
                        <small><%= errors.descripcion.msg %> </small>
                    <% } %>
                </div>
<!--SUBIDA DE IMAGENES-->
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Subir imagenes del producto</label>
                    <input class="form-control" type="file" name="imagen" id="formFileMultiple" accept="image/png" value="<%= locals.old && old.imagen ? old.nombre: null %><%= producto.imagenes[0].nombre %>" >
                    <% if (locals.errors && errors.imagen) { %>
                        <small><%= errors.imagen.msg %> </small>
                    <% } %>
                </div>
                
                <div class="button d-flex justify-content-center">
                    <button class="btn" type="submit">Editar Producto</button>
                </div>
                
            </section>
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>